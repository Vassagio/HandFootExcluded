<?xml version="1.0" encoding="utf-8"?>

<v:PageBase x:TypeArguments="vm:IGamePageViewModel"
            xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
            xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
            x:Class="HandFootExcluded.UI.Views.GamePage"
            xmlns:v="using:HandFootExcluded.UI.Views"
            xmlns:vm="using:HandFootExcluded.UI.ViewModels"
            Title="GamePage">

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="Auto" />
            <ColumnDefinition Width="*" />
        </Grid.ColumnDefinitions>
        
        <Grid Grid.Row="0" Grid.RowSpan="4" Grid.Column="0" BackgroundColor="DarkBlue" HorizontalOptions="Fill" VerticalOptions="Fill">
            <v:TotalScoreView Grid.Row="1" Grid.Column="0" BindingContext="{Binding TotalScore}" WidthRequest="150" Margin="3,37,3,0" />
        </Grid>

        <CarouselView Grid.Column="1" ItemsSource="{Binding Rounds}" HorizontalOptions="Fill" VerticalOptions="Fill" IsBounceEnabled="False" Loop="False">
            <CarouselView.ItemTemplate>
                <DataTemplate>
                    <v:RoundView BindingContext="{Binding}" />
                </DataTemplate>
            </CarouselView.ItemTemplate>
        </CarouselView>
    </Grid>
</v:PageBase>