<?xml version="1.0" encoding="utf-8"?>

<v:PageBase x:TypeArguments="vm:IMainPageViewModel"
            xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
            xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
            xmlns:v="using:HandFootExcluded.UI.Views"
            xmlns:vm="using:HandFootExcluded.UI.ViewModels"
            x:Class="HandFootExcluded.UI.MainPage" x:DataType="vm:IMainPageViewModel">

    <ScrollView>
        <VerticalStackLayout VerticalOptions="Center">
            <Label Text="Hand Foot Ass" SemanticProperties.HeadingLevel="Level1" FontSize="32"
                   HorizontalOptions="Center" />

            <ImageButton Source="hfa.jpg" HeightRequest="200" SemanticProperties.Hint="Start a game of Hand Foot Ass"
                         HorizontalOptions="Center" Command="{Binding StartCommand}" BackgroundColor="DarkBlue">
                <ImageButton.Clip>
                    <EllipseGeometry RadiusX="80" RadiusY="80" Center="85,100" />
                </ImageButton.Clip>
            </ImageButton>

            <Button Text="Game History" Command="{Binding GameHistoryCommand}" HorizontalOptions="Center" />

        </VerticalStackLayout>
    </ScrollView>

</v:PageBase>